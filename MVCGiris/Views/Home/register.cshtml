@model MVCGiris.Models.RegisterModel

@{
    ViewBag.Title = "register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Yeni Hesap Oluştur!</h1>
                        </div>

                        @using (Html.BeginForm("register", "Home", FormMethod.Post))
                        {
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6>@Html.LabelFor(m=>m.Ad)</h6>
                                    @Html.TextBoxFor(m => m.Ad, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(m=>m.Ad)
                                    @*<input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Ad">*@
                                </div>
                                <div class="col-sm-6">
                                    @Html.LabelFor(m => m.Soyad)
                                    @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(m => m.Soyad)
                                    @*<input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Soyad">*@
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user" })
                                @Html.ValidationMessageFor(m => m.Email)
                                @*<input type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email">*@
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.LabelFor(m => m.Sifre)
                                    @Html.PasswordFor(m => m.Sifre, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(m => m.Sifre)
                                    @*<input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Şifre">*@
                                </div>
                                <div class="col-sm-6">
                                    @Html.LabelFor(m=>m.SifreTekrar)
                                    @Html.PasswordFor(m => m.SifreTekrar, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(m => m.SifreTekrar)
                                    @*<input type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Şifre Tekrar">*@
                                </div>
                            </div>
                        <input type="submit" value="Kayıt ol" class="btn btn-primary btn-user btn-block" />
                            <h2>@ViewBag.mesaj </h2>
                            @*<a href="login.html" class="btn btn-primary btn-user btn-block">
                                Kayıt ol
                            </a>*@
                        }
