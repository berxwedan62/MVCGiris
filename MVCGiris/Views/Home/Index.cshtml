@model IEnumerable<MVCGiris.Models.HaberModel>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Anasayfa</h2>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css">

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="margin-bottom:10px;" >
                        <div class="card-block">
                            <figure class="profile">
                                <img src="@Html.DisplayFor(modelitem=>item.resim)" width="100%" height="250" class="profile-avatar" alt="">
                            </figure>
                            <a href="@Url.Action("HaberGoruntule", new { id = item.id })"><p class="card-title mt-3"> @Html.DisplayFor(modelitem => item.baslik)  </p></a>
                        </div>
                        <div class="card-footer">
                            <small>@Html.DisplayFor(modelitem => item.tarih)</small>
                            <button class="btn btn-secondary float-right btn-sm">Detay</button>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>




